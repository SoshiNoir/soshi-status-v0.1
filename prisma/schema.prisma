generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Our model to store the status
model Status {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  isAwake   Boolean
  hasEaten  Boolean
  hasDrunk  Boolean
}